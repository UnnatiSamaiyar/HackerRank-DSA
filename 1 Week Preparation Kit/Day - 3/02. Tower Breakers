#include <bits/stdc++.h>
using namespace std;

int main(){
    int T;
    cin>>T;
    while(T>0){
        int n,m;
        cin>>n>>m;
        if(m==1){
            cout<<"2"<<endl;
        }
        else if(n%2==0){
            cout<<"2"<<endl;
        }
        else{
            cout<<"1"<<endl;
        }
        T--;
    }
    return 0;
}
